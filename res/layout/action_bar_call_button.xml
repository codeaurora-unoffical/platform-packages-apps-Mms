<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <RelativeLayout android:id="@+id/indicatorContainerOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dip"
        android:paddingRight="12dip"
        android:gravity="center"
        android:minHeight="?android:attr/actionBarSize"
        android:background="?android:attr/actionBarItemBackground"
        android:visibility="gone" >
        <ImageView android:id="@+id/menu_call_recipient1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_call"
            android:contentDescription="@string/menu_call" />
        <ImageView android:id="@+id/sim_card_indicator1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/menu_call_recipient1"
            android:contentDescription="@string/menu_call" />
    </RelativeLayout>

    <RelativeLayout android:id="@+id/indicatorContainerTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dip"
        android:paddingRight="12dip"
        android:gravity="center"
        android:minHeight="?android:attr/actionBarSize"
        android:background="?android:attr/actionBarItemBackground"
        android:visibility="gone" >
        <ImageView android:id="@+id/menu_call_recipient2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_call"
            android:contentDescription="@string/menu_call" />
        <ImageView android:id="@+id/sim_card_indicator2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/menu_call_recipient2"
            android:contentDescription="@string/menu_call" />
    </RelativeLayout>
</LinearLayout>